<h2>Add new celebrity</h2>

<form action="/celebrities" method="POST">

    <label class="label" for="name">Name:</label>
    <input class="input" id="name" type="text" name="name">

    <label class="label" for="occupation">Occupation:</label>
    <input class="input" id="occupation" type="text" name="occupation">

    <label class="label" for="catchphrase">Catchphrase:</label>
    <input class="input" id="catchphrase" type="text" name="catchPhrase">

    {{#if error}}
    <p>{{error}}</p>
    {{/if}}

    <button class="btn">ADD</button>
</form>